<!DOCTYPE html>
<html lang="pt-br">
<head>
<script>
// Função global para fallback de imagens quebradas
function aplicarFallbackImagens(selector = 'img', placeholder = '/images/placeholder.png') {
    document.querySelectorAll(selector).forEach(img => {
        if (!img.dataset.fallbackSet) {
            const rawSrc = img.getAttribute('src');
            if (!rawSrc || rawSrc.trim() === '') {
                img.src = placeholder;
            }
            img.onerror = function() {
                if (img.src !== placeholder) {
                    img.src = placeholder;
                }
            };
            img.dataset.fallbackSet = 'true';
        } else {
            const rawSrc = img.getAttribute('src');
            if (!rawSrc || rawSrc.trim() === '') {
                if (img.src !== placeholder) img.src = placeholder;
            }
        }
    });
}

// Aplica fallback em todas as imagens ao carregar a página
document.addEventListener('DOMContentLoaded', function() {
    aplicarFallbackImagens();
    // Observa DOM para novas imagens dinâmicas
    const observer = new MutationObserver(() => aplicarFallbackImagens());
    observer.observe(document.body, { childList: true, subtree: true });
});
</script>
