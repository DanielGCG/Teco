<script>
// ==================== Vari√°veis Globais ====================
let currentPage = 1;
let currentModalPage = 1;
let currentUserId = null;
let selectedCartinhas = new Set();
let searchTimeout = null;
let usuarios = [];
let estatisticas = {};

const ITEMS_PER_PAGE = 20;
const CARTINHAS_PER_PAGE = 15;

// ==================== Inicializa√ß√£o ====================
document.addEventListener('DOMContentLoaded', () => {
    carregarUsuarios();
    carregarEstatisticas();
    
    // Event listeners
    document.getElementById('userFilter').addEventListener('change', aplicarFiltros);
    document.getElementById('statusFilter').addEventListener('change', aplicarFiltros);
    document.getElementById('searchInput').addEventListener('input', debounceSearch);
    document.getElementById('refreshBtn').addEventListener('click', () => {
        carregarUsuarios();
        carregarEstatisticas();
    });
    document.getElementById('limpezaBtn').addEventListener('click', executarLimpeza);
    
    // Modal event listeners
    document.getElementById('modalStatusFilter').addEventListener('change', carregarCartinhasUsuario);
    document.getElementById('modalSearch').addEventListener('input', debounceModalSearch);
    document.getElementById('deleteSelectedBtn').addEventListener('click', confirmarRemocaoSelecionadas);
});

// ==================== Carregamento de Dados ====================
async function carregarUsuarios() {
    try {
        mostrarLoading(true);
        
        const filtros = obterFiltros();
        // API espera usuario (ID), status, search
        const params = new URLSearchParams();
        params.append('page', currentPage);
        params.append('limit', ITEMS_PER_PAGE);
        if (filtros.usuario) params.append('usuario', filtros.usuario);
        if (filtros.status) params.append('status', filtros.status);
        if (filtros.search) params.append('search', filtros.search);

        const response = await fetch(`/api/admin/cartinhas/usuarios?${params.toString()}`, {
            credentials: 'include'
        });
        if (!response.ok) throw new Error('Erro ao carregar usu√°rios');
        const data = await response.json();
        const usuariosArr = Array.isArray(data.usuarios) ? data.usuarios : [];
        usuarios = usuariosArr;
        renderizarUsuarios(usuariosArr);
        renderizarPaginacao(data.currentPage, data.totalPages, 'pagination');
        
    } catch (error) {
        console.error('Erro ao carregar usu√°rios:', error);
        mostrarToast('Erro ao carregar usu√°rios', 'error');
    } finally {
        mostrarLoading(false);
    }
}

async function carregarEstatisticas() {
    try {
        const response = await fetch('/api/admin/cartinhas/estatisticas', {
            credentials: 'include'
        });
        
        if (!response.ok) throw new Error('Erro ao carregar estat√≠sticas');
        
        estatisticas = await response.json();
        renderizarEstatisticas(estatisticas);
        
    } catch (error) {
        console.error('Erro ao carregar estat√≠sticas:', error);
    }
}

async function carregarCartinhasUsuario() {
    if (!currentUserId) return;
    
    try {
        // API espera status, search
        const status = document.getElementById('modalStatusFilter').value;
        const search = document.getElementById('modalSearch').value;
        const params = new URLSearchParams();
        params.append('page', currentModalPage);
        params.append('limit', CARTINHAS_PER_PAGE);
        if (status) params.append('status', status);
        if (search) params.append('search', search);

        const response = await fetch(`/api/admin/cartinhas/usuario/${currentUserId}?${params.toString()}`, {
            credentials: 'include'
        });
        if (!response.ok) throw new Error('Erro ao carregar cartinhas');
        const data = await response.json();
        renderizarCartinhas(data.cartinhas);
        renderizarPaginacao(data.currentPage, data.totalPages, 'modalPagination');
        
    } catch (error) {
        console.error('Erro ao carregar cartinhas:', error);
        mostrarToast('Erro ao carregar cartinhas', 'error');
    }
}

// ==================== Renderiza√ß√£o ====================
function renderizarUsuarios(usuarios) {
    const container = document.getElementById('usuariosList');
    usuarios = Array.isArray(usuarios) ? usuarios : [];
    if (usuarios.length === 0) {
        container.innerHTML = `
            <div class="text-center py-4 text-muted">
                <i class="fas fa-inbox fa-3x mb-3"></i>
                <p>Nenhum usu√°rio encontrado com os filtros aplicados</p>
            </div>
        `;
        return;
    }
    const html = usuarios.map(usuario => `
        <div class="usuario-card card mb-3" onclick="abrirCartinhasUsuario(${usuario.id}, '${usuario.username}')">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-2 text-center">
                        <img src="${usuario.profileimage}" 
                             alt="${usuario.username}" 
                             class="rounded-circle" 
                             style="width: 50px; height: 50px; object-fit: cover;">
                    </div>
                    <div class="col-md-4">
                        <h6 class="mb-1">${usuario.username}</h6>
                        <small class="text-muted">ID: ${usuario.id}</small>
                    </div>
                    <div class="col-md-6">
                        <div class="row text-center">
                            <div class="col-3">
                                <span class="badge bg-primary">${usuario.totalcartinhas}</span>
                                <small class="d-block">Total</small>
                            </div>
                            <div class="col-3">
                                <span class="badge bg-warning text-dark">${usuario.naolidas}</span>
                                <small class="d-block">N√£o lidas</small>
                            </div>
                            <div class="col-3">
                                <span class="badge bg-success">${usuario.lidas}</span>
                                <small class="d-block">Lidas</small>
                            </div>
                            <div class="col-3">
                                <span class="badge bg-info">${usuario.favoritas}</span>
                                <small class="d-block">Favoritas</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    `).join('');
    container.innerHTML = html;
}

function renderizarCartinhas(cartinhas) {
    const container = document.getElementById('cartinhasList');
    
    if (cartinhas.length === 0) {
        container.innerHTML = `
            <div class="text-center py-4 text-muted">
                <p>Nenhuma cartinha encontrada</p>
            </div>
        `;
        return;
    }
    
    const html = cartinhas.map(cartinha => {
        const isFavorited = cartinha.isfavorited;
        const isRead = cartinha.isread;
        const statusClass = isFavorited ? 'info' : (isRead ? 'success' : 'warning');
        const statusText = isFavorited ? 'Favorita' : (isRead ? 'Lida' : 'N√£o lida');
        
        return `
            <div class="cartinha-item p-3 ${selectedCartinhas.has(cartinha.id) ? 'selected' : ''}" 
                 data-cartinha-id="${cartinha.id}">
                <div class="row align-items-center">
                    <div class="col-1">
                        <input type="checkbox" class="form-check-input cartinha-checkbox" 
                               data-cartinha-id="${cartinha.id}"
                               ${selectedCartinhas.has(cartinha.id) ? 'checked' : ''}>
                    </div>
                    <div class="col-7">
                        <h6 class="mb-1">${highlightSearch(cartinha.title || 'Sem t√≠tulo')}</h6>
                        <small class="text-muted">
                            De: <strong>${cartinha.remetente ? cartinha.remetente.username : 'Exclu√≠do'}</strong> ‚Ä¢ 
                            ${formatarData(cartinha.createdat)}
                        </small>
                    </div>
                    <div class="col-2 text-center">
                        <span class="badge bg-${statusClass} status-badge">${statusText}</span>
                    </div>
                    <div class="col-2 text-end">
                        <div class="cartinha-actions">
                            <button class="btn btn-sm btn-outline-danger" 
                                    onclick="event.stopPropagation(); confirmarRemocaoUnica(${cartinha.id})"
                                    title="Remover">
                                üóëÔ∏è
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        `;
    }).join('');
    
    container.innerHTML = html;
    
    // Adicionar event listeners para checkboxes
    document.querySelectorAll('.cartinha-checkbox').forEach(checkbox => {
        checkbox.addEventListener('change', toggleSelecaoCartinha);
    });
}

function renderizarEstatisticas(stats) {
    document.getElementById('totalCartinhas').textContent = stats.total || 0;
    document.getElementById('naoLidas').textContent = stats.naolidas || 0;
    document.getElementById('lidas').textContent = stats.lidas || 0;
    document.getElementById('favoritas').textContent = stats.favoritas || 0;
}

function renderizarPaginacao(currentPage, totalPages, containerId) {
    const container = document.getElementById(containerId);
    
    if (totalPages <= 1) {
        container.innerHTML = '';
        return;
    }
    
    let html = '';
    
    // Bot√£o anterior
    html += `
        <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
            <a class="page-link" href="#" onclick="mudarPagina(${currentPage - 1}, '${containerId}')">
                Anterior
            </a>
        </li>
    `;
    
    // P√°ginas
    const startPage = Math.max(1, currentPage - 2);
    const endPage = Math.min(totalPages, currentPage + 2);
    
    for (let i = startPage; i <= endPage; i++) {
        html += `
            <li class="page-item ${i === currentPage ? 'active' : ''}">
                <a class="page-link" href="#" onclick="mudarPagina(${i}, '${containerId}')">${i}</a>
            </li>
        `;
    }
    
    // Bot√£o pr√≥ximo
    html += `
        <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
            <a class="page-link" href="#" onclick="mudarPagina(${currentPage + 1}, '${containerId}')">
                Pr√≥ximo
            </a>
        </li>
    `;
    
    container.innerHTML = html;
}

// ==================== Func√µes de A√ß√£o ====================
function abrirCartinhasUsuario(userId, username) {
    currentUserId = userId;
    currentModalPage = 1;
    selectedCartinhas.clear();
    
    document.getElementById('modalTitle').textContent = `Cartinhas de ${username}`;
    document.getElementById('modalStatusFilter').value = '';
    document.getElementById('modalSearch').value = '';
    
    carregarCartinhasUsuario();
    
    const modal = new bootstrap.Modal(document.getElementById('cartinhasModal'));
    modal.show();
}

function toggleSelecaoCartinha(event) {
    const cartinhaId = parseInt(event.target.dataset.cartinhaId);
    const cartinhaElement = event.target.closest('.cartinha-item');
    
    if (event.target.checked) {
        selectedCartinhas.add(cartinhaId);
        cartinhaElement.classList.add('selected');
    } else {
        selectedCartinhas.delete(cartinhaId);
        cartinhaElement.classList.remove('selected');
    }
    
    atualizarBotaoRemover();
}

function atualizarBotaoRemover() {
    const btn = document.getElementById('deleteSelectedBtn');
    btn.disabled = selectedCartinhas.size === 0;
    btn.textContent = selectedCartinhas.size > 0 
        ? `üóëÔ∏è Remover Selecionadas (${selectedCartinhas.size})` 
        : 'üóëÔ∏è Remover Selecionadas';
}

async function confirmarRemocaoUnica(cartinhaId) {
    const cartinha = await obterDetalhesCartinha(cartinhaId);
    if (!cartinha) return;
    
    mostrarConfirmacao(
        `Tem certeza que deseja remover a cartinha "${cartinha.titulo}"?`,
        () => removerCartinhas([cartinhaId])
    );
}

function confirmarRemocaoSelecionadas() {
    if (selectedCartinhas.size === 0) return;
    
    mostrarConfirmacao(
        `Tem certeza que deseja remover ${selectedCartinhas.size} cartinha(s) selecionada(s)?`,
        () => removerCartinhas(Array.from(selectedCartinhas))
    );
}

async function removerCartinhas(cartinhaIds) {
    try {
        const response = await fetch('/api/admin/cartinhas/remover', {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            body: JSON.stringify({ cartinhaIds })
        });
        
        if (!response.ok) throw new Error('Erro ao remover cartinhas');
        
        const result = await response.json();
        mostrarToast(`${result.removidas} cartinha(s) removida(s) com sucesso`, 'success');
        
        selectedCartinhas.clear();
        carregarCartinhasUsuario();
        carregarUsuarios();
        carregarEstatisticas();
        
    } catch (error) {
        console.error('Erro ao remover cartinhas:', error);
        mostrarToast('Erro ao remover cartinhas', 'error');
    }
}

async function executarLimpeza() {
    mostrarConfirmacao(
        'Executar limpeza autom√°tica? Isso remover√° cartinhas lidas h√° mais de 30 dias que n√£o s√£o favoritas.',
        async () => {
            try {
                const response = await fetch('/api/admin/cartinhas/limpeza', {
                    method: 'POST',
                    credentials: 'include'
                });
                
                if (!response.ok) throw new Error('Erro na limpeza');
                
                const result = await response.json();
                mostrarToast(`Limpeza conclu√≠da: ${result.removidas} cartinha(s) removida(s)`, 'success');
                
                carregarUsuarios();
                carregarEstatisticas();
                
            } catch (error) {
                console.error('Erro na limpeza:', error);
                mostrarToast('Erro ao executar limpeza', 'error');
            }
        }
    );
}

// ==================== Utilit√°rios ====================
function obterFiltros() {
    return {
        usuario: document.getElementById('userFilter').value,
        status: document.getElementById('statusFilter').value,
        search: document.getElementById('searchInput').value.trim()
    };
}

function aplicarFiltros() {
    currentPage = 1;
    carregarUsuarios();
}

function debounceSearch() {
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(aplicarFiltros, 500);
}

function debounceModalSearch() {
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(() => {
        currentModalPage = 1;
        carregarCartinhasUsuario();
    }, 500);
}

function mudarPagina(page, containerId) {
    if (containerId === 'pagination') {
        currentPage = page;
        carregarUsuarios();
    } else {
        currentModalPage = page;
        carregarCartinhasUsuario();
    }
}

function mostrarLoading(show) {
    document.getElementById('loading').style.display = show ? 'block' : 'none';
}

function mostrarConfirmacao(mensagem, callback) {
    document.getElementById('confirmMessage').textContent = mensagem;
    
    const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
    modal.show();
    
    document.getElementById('confirmBtn').onclick = () => {
        callback();
        modal.hide();
    };
}

function mostrarToast(mensagem, tipo = 'info') {
    // Implementar toast notification
    const alertClass = tipo === 'success' ? 'alert-success' : 
                      tipo === 'error' ? 'alert-danger' : 'alert-info';
    
    const toast = document.createElement('div');
    toast.className = `alert ${alertClass} alert-dismissible fade show position-fixed`;
    toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
    toast.innerHTML = `
        ${mensagem}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        if (toast.parentNode) toast.remove();
    }, 5000);
}

function formatarData(dataISO) {
    const data = new Date(dataISO);
    return data.toLocaleDateString('pt-BR') + ' ' + data.toLocaleTimeString('pt-BR', {
        hour: '2-digit',
        minute: '2-digit'
    });
}

function truncateText(text, maxLength) {
    if (!text) return '';
    return text.length > maxLength ? text.substring(0, maxLength) + '...' : text;
}

function highlightSearch(text) {
    const search = document.getElementById('modalSearch')?.value || 
                   document.getElementById('searchInput')?.value || '';
    if (!search.trim()) return text;
    
    const regex = new RegExp(`(${search.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
    return text.replace(regex, '<span class="search-highlight">$1</span>');
}

async function obterDetalhesCartinha(cartinhaId) {
    try {
        const response = await fetch(`/api/admin/cartinhas/${cartinhaId}`, {
            credentials: 'include'
        });
        return response.ok ? await response.json() : null;
    } catch (error) {
        console.error('Erro ao obter detalhes da cartinha:', error);
        return null;
    }
}

// Carregar lista de usu√°rios para o filtro
async function carregarUsuariosFiltro() {
    try {
        const response = await fetch('/api/users', {
            credentials: 'include'
        });
        if (response.ok) {
            const usuarios = await response.json();
