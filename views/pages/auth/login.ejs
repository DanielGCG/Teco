<div class="container d-flex flex-column min-vh-100 justify-content-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Entrar</h3>

                    <form id="loginForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Usuário</label>
                            <div class="input-group">
                                <span class="input-group-text">@</span>
                                <input type="text" class="form-control" id="username" name="username" required maxlength="15" pattern="[A-Za-z0-9_]{1,15}" aria-describedby="usernameHelp">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Senha</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    <div id="message" class="mt-3 text-center"></div>
                    <div class="mt-2 text-center">
                        <a href="/register">Não tem conta? Registre-se</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="version-text text-center w-100">
        <h5 style="font-size: 30px;">Teco</h5>
        <small><%= locals.version %></small>
    </div>
</div>

<style>
.version-text {
    position: absolute;
    bottom: 20px;
    left: 0;
    width: 100%;
}
</style>

<script>
const loginForm = document.getElementById('loginForm');
const usernameInput = document.getElementById('username');
const messageDiv = document.getElementById('message');

loginForm.addEventListener('submit', async (e) => {
    e.preventDefault();

    const username = '@' + usernameInput.value.trim().replace(/^@/, '');
    const password = document.getElementById('password').value;
    
    messageDiv.textContent = '';
    messageDiv.className = '';

    try {
        const response = await fetch('/api/users/login', {
            method: 'POST',
            credentials: 'include',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ username, password })
        });

        const data = await response.json();

        if (response.ok) {
            messageDiv.className = 'text-success';
            messageDiv.textContent = data.message;
            setTimeout(() => window.location.href = '/', 500);
        } else {
            messageDiv.className = 'text-danger';
            messageDiv.textContent = data.message || 'Usuário ou senha incorretos';
        }
    } catch (err) {
        console.error(err);
        messageDiv.className = 'text-danger';
        messageDiv.textContent = 'Erro ao fazer login. Tente novamente.';
    }
});

// Apenas para garantir que o usuário não digite outro @ se ele já estiver lá visualmente
usernameInput.addEventListener('input', () => {
    usernameInput.value = usernameInput.value.replace(/[^a-zA-Z0-9_]/g, '');
    if (usernameInput.value.length > 15) usernameInput.value = usernameInput.value.slice(0, 15);
});
</script>
