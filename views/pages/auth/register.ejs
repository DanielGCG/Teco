<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Criar Conta</h3>

                    <form id="registerForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Usuário</label>
                            <input type="text" class="form-control" id="username" name="username" required maxlength="13" value="@" autocomplete="off">
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Senha</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password" required>
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">Ver</button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="passwordConfirm" class="form-label">Confirme a Senha</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" required>
                                <button class="btn btn-outline-secondary" type="button" id="togglePasswordConfirm">Ver</button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="bio" class="form-label">Bio (opcional)</label>
                            <textarea class="form-control" id="bio" name="bio" rows="3" maxlength="160"></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Registrar</button>
                    </form>

                    <div id="message" class="mt-3 text-center"></div>
                    <div class="mt-2 text-center">
                        <a href="/login">Já tem conta? Faça login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="version-text text-center w-100">
        <h5>Teco</h5>
        <small><%= locals.version %></small>
    </div>
</div>

<style>
.version-text {
    position: absolute;
    bottom: 20px; /* distância do chão */
    left: 0;
    width: 100%;
}
</style>

<script>
document.getElementById('registerForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const username = document.getElementById('username').value.trim();
    const password = document.getElementById('password').value;
    const passwordConfirm = document.getElementById('passwordConfirm').value;
    const bio = document.getElementById('bio').value.trim();

    const messageDiv = document.getElementById('message');
    messageDiv.textContent = '';
    
    try {
        // Validação local: checar confirmação de senha
        if (password !== passwordConfirm) {
            messageDiv.className = 'text-danger';
            messageDiv.textContent = 'As senhas não conferem.';
            return;
        }

        const response = await fetch('/api/users/register', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ username, password, bio }),
            credentials: 'include' // garante que o cookie da sessão vá junto
        });

        const data = await response.json();

        if (response.ok) {
            messageDiv.className = 'text-success';
            messageDiv.textContent = data.message;
            window.location.href = '/login';
        } else {
            messageDiv.className = 'text-danger';
            messageDiv.textContent = data.message;
        }
    } catch (err) {
        console.error(err);
        messageDiv.className = 'text-danger';
        messageDiv.textContent = 'Erro ao registrar. Tente novamente.';
    }
});

const usernameInput = document.getElementById('username');

// Sempre manter o @ no início
usernameInput.addEventListener('input', () => {
    // Remove qualquer caractere inválido depois do @
    usernameInput.value = '@' + usernameInput.value.slice(1).replace(/[^a-zA-Z0-9_]/g, '');

    // Limitar a 13 caracteres
    if (usernameInput.value.length > 13) {
        usernameInput.value = usernameInput.value.slice(0, 13);
    }
});

// Impedir apagar o @
usernameInput.addEventListener('keydown', (e) => {
    if (usernameInput.selectionStart === 0 && (e.key === 'Backspace' || e.key === 'Delete')) {
        e.preventDefault();
    }
});

// Toggle show/hide password
const togglePassword = document.getElementById('togglePassword');
const togglePasswordConfirm = document.getElementById('togglePasswordConfirm');
togglePassword.addEventListener('click', () => {
    const pwd = document.getElementById('password');
    if (pwd.type === 'password') { pwd.type = 'text'; togglePassword.textContent = 'Ocultar'; }
    else { pwd.type = 'password'; togglePassword.textContent = 'Ver'; }
});
togglePasswordConfirm.addEventListener('click', () => {
    const pwd = document.getElementById('passwordConfirm');
    if (pwd.type === 'password') { pwd.type = 'text'; togglePasswordConfirm.textContent = 'Ocultar'; }
    else { pwd.type = 'password'; togglePasswordConfirm.textContent = 'Ver'; }
});
</script>
