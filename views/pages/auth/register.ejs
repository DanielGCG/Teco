<div class="container d-flex flex-column min-vh-100 justify-content-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Registro</h3>

                    <form id="registerForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Usuário</label>
                            <div class="input-group">
                                <span class="input-group-text">@</span>
                                <input type="text" class="form-control" id="username" name="username" required maxlength="15" pattern="[A-Za-z0-9_]{1,15}" autocomplete="off">
                            </div>
                            <div id="usernameHelp" class="form-text">Máx 16 caracteres.</div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Senha</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password" required minlength="8">
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">Ver</button>
                            </div>
                            <div id="passwordHelp" class="form-text">Mínimo 8 caracteres.</div>
                        </div>

                        <div class="mb-3">
                            <label for="passwordConfirm" class="form-label">Confirme a senha</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" required minlength="8">
                                <button class="btn btn-outline-secondary" type="button" id="togglePasswordConfirm">Ver</button>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Registrar</button>
                    </form>

                    <div id="message" class="mt-3 text-center"></div>
                    <div class="mt-2 text-center">
                        <a href="/login">Já tem conta? Faça login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="version-text text-center w-100">
        <h5 style="font-size: 30px;">Teco</h5>
        <small><%= locals.version %></small>
    </div>
</div>

<style>
.version-text {
    position: absolute;
    bottom: 20px; /* distância do chão */
    left: 0;
    width: 100%;
}
</style>

<script>
const registerForm = document.getElementById('registerForm');
const usernameInput = document.getElementById('username');
const passwordInput = document.getElementById('password');
const passwordConfirmInput = document.getElementById('passwordConfirm');
const messageDiv = document.getElementById('message');

registerForm.addEventListener('submit', async (e) => {
    e.preventDefault();

    const usernameRaw = usernameInput.value.trim();
    const username = '@' + usernameRaw.replace(/^@/, '');
    const password = passwordInput.value;
    const passwordConfirm = passwordConfirmInput.value;

    messageDiv.textContent = '';
    
    try {
        if (password.length < 8) {
            messageDiv.className = 'text-danger';
            messageDiv.textContent = 'A senha deve ter pelo menos 8 caracteres.';
            return;
        }

        if (password !== passwordConfirm) {
            messageDiv.className = 'text-danger';
            messageDiv.textContent = 'As senhas não conferem.';
            return;
        }

        const response = await fetch('/api/users/register', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ username, password }),
            credentials: 'include'
        });

        const data = await response.json();

        if (response.ok) {
            messageDiv.className = 'text-success';
            messageDiv.textContent = data.message;
            setTimeout(() => window.location.href = '/login', 1000);
        } else {
            messageDiv.className = 'text-danger';
            messageDiv.textContent = data.message;
        }
    } catch (err) {
        console.error(err);
        messageDiv.className = 'text-danger';
        messageDiv.textContent = 'Erro ao registrar. Tente novamente.';
    }
});

usernameInput.addEventListener('input', () => {
    usernameInput.value = usernameInput.value.replace(/[^a-zA-Z0-9_]/g, '');
    if (usernameInput.value.length > 15) {
        usernameInput.value = usernameInput.value.slice(0, 15);
    }
});

const togglePassword = document.getElementById('togglePassword');
const togglePasswordConfirm = document.getElementById('togglePasswordConfirm');
togglePassword.addEventListener('click', () => {
    const pwd = document.getElementById('password');
    if (pwd.type === 'password') { pwd.type = 'text'; togglePassword.textContent = 'Ocultar'; }
    else { pwd.type = 'password'; togglePassword.textContent = 'Ver'; }
});
togglePasswordConfirm.addEventListener('click', () => {
    const pwd = document.getElementById('passwordConfirm');
    if (pwd.type === 'password') { pwd.type = 'text'; togglePasswordConfirm.textContent = 'Ocultar'; }
    else { pwd.type = 'password'; togglePasswordConfirm.textContent = 'Ver'; }
});
</script>
