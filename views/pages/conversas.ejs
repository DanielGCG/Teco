<script>
    // Aguarda o socket global estar disponível
    const socket = window.appSocket || notificationsSocket;

    // Log de conexão e erro do Socket.IO
    if (socket) {
        console.log('[Conversas] Reutilizando conexão Socket.IO existente');
    } else {
        console.error('[Conversas] Socket.IO não disponível!');
    }

    let selectedChatId = null;
    let allMessages = [];
    let currentPage = 1;
    let loadingHistory = false;
    let currentUser = null;
    let currentChatOtherUser = null; // Armazena info do outro usuário na conversa atual

    // Elementos do DOM
    const chatWindow = document.getElementById('dm-chat-container');
    const chatInput = document.getElementById('dm-input-msg');
    const sendBtn = document.getElementById('dm-send-btn');
    const sidebarView = document.getElementById('sidebar-view');
    const chatView = document.getElementById('chat-view');
    const backBtn = document.getElementById('back-to-list');
    const chatUserInfoBtn = document.getElementById('chat-user-info-btn');
    const userInfoModal = new bootstrap.Modal(document.getElementById('userInfoModal'));

    // Event listener para voltar à lista (mobile)
    backBtn.addEventListener('click', () => {
        sidebarView.style.display = 'block';
        chatView.style.display = 'none';
    });

    // Event listener para abrir modal de info do usuário
    chatUserInfoBtn.addEventListener('click', () => {
        if (currentChatOtherUser) {
            showUserInfoModal(currentChatOtherUser);
        }
    });

    // ---------------- Inicialização ----------------
    async function init() {
        try {
            // Busca dados do usuário logado
            const res = await fetch('/api/users/me', { credentials: 'include' });
            if (!res.ok) throw new Error("Não foi possível carregar perfil do usuário");
            currentUser = await res.json();
            console.log('[Init] Usuário logado:', currentUser);

            await carregarDMs();
            
            // Event listeners de busca
            document.getElementById('search-btn').addEventListener('click', buscarUsuarios);
            document.getElementById('search-input').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') buscarUsuarios();
            });
        } catch (err) {
            console.error('[Init] Erro:', err);
            alert("Erro ao carregar dados do usuário. Refaça login.");
        }
    }

    // ---------------- Funções auxiliares ----------------
    function formatTime(dateStr) {
        const date = new Date(dateStr);
        return `${date.getHours().toString().padStart(2,'0')}:${date.getMinutes().toString().padStart(2,'0')}`;
    }

    // Retorna a cor do status (online/ausente/offline)
    function getStatusColor(status) {
        switch(status) {
            case 'online': return '#28a745';    // Verde
            case 'ausente': return '#ffc107';   // Amarelo
            default: return '#6c757d';          // Cinza (offline)
        }
    }

    // Cria HTML do avatar com indicador de status
    function createAvatarWithStatus(user, size = 40) {
        const avatar = user.profile_image || user.avatar || '/images/default-avatar.png';
        const statusColor = getStatusColor(user.status);
        
        return `
            <div class="position-relative" style="width:${size}px;height:${size}px;flex-shrink:0;">
                <img src="${avatar}" 
                     class="rounded-circle" 
                     style="width:100%;height:100%;object-fit:cover;"
                     alt="${user.username}">
                <span class="position-absolute bottom-0 end-0 border border-white rounded-circle" 
                      style="width:${Math.round(size * 0.3)}px;height:${Math.round(size * 0.3)}px;background:${statusColor};"></span>
            </div>
        `;
    }

    // Cria card de usuário unificado (para conversas, amigos e busca)
    function createUserCard(user, type = 'friend') {
        const card = document.createElement('div');
        card.className = 'card dm-card';
        
        let content = '';
        
        if (type === 'conversation') {
            // Card de conversa
            const lastMsg = user.lastMessage || 'Nenhuma mensagem ainda';
            const lastMsgTime = user.lastMessageAt ? formatTime(user.lastMessageAt) : '';
            const unreadCount = user.unreadCount || 0;
            
            content = `
                <div class="card-body p-2">
                    <div class="d-flex align-items-center gap-2">
                        ${createAvatarWithStatus(user.otherUser || user, 45)}
                        <div class="flex-grow-1 min-width-0">
                            <div class="d-flex justify-content-between align-items-start gap-2">
                                <h6 class="mb-0 text-truncate fw-bold">${user.otherUser?.username || 'Conversa'}</h6>
                                ${unreadCount > 0 ? `<span class="unread-badge">${unreadCount}</span>` : ''}
                            </div>
                            <p class="mb-0 text-muted small text-truncate">${lastMsg}</p>
                            ${lastMsgTime ? `<small class="text-muted" style="font-size:0.7rem;">${lastMsgTime}</small>` : ''}
                        </div>
                    </div>
                </div>
            `;
        } else if (type === 'friend') {
            // Card de amigo (sem indicador de status)
            const avatar = user.profile_image || user.avatar || '/images/default-avatar.png';
            content = `
                <div class="card-body p-2">
                    <div class="d-flex align-items-center gap-2">
                        <div style="width:40px;height:40px;flex-shrink:0;">
                            <img src="${avatar}" 
                                 class="rounded-circle" 
                                 style="width:100%;height:100%;object-fit:cover;"
                                 alt="${user.username}">
                        </div>
                        <div class="flex-grow-1 min-width-0">
                            <h6 class="mb-0 text-truncate">${user.username}</h6>
                        </div>
                        ${user.hasConversation ? '<small class="text-muted"><i class="bi bi-chat-fill"></i></small>' : ''}
                    </div>
                </div>
            `;
        } else if (type === 'search') {
            // Card de busca (sem indicador de status)
            const avatar = user.profile_image || user.avatar || '/images/default-avatar.png';
            const badges = [];
            if (user.isFriend) badges.push('<span class="badge bg-success" style="font-size:0.6rem;">Amigo</span>');
            if (user.hasConversation) badges.push('<span class="badge bg-info" style="font-size:0.6rem;">Conversa ativa</span>');
            
            content = `
                <div class="card-body p-2">
                    <div class="d-flex align-items-center gap-2">
                        <div style="width:40px;height:40px;flex-shrink:0;">
                            <img src="${avatar}" 
                                 class="rounded-circle" 
                                 style="width:100%;height:100%;object-fit:cover;"
                                 alt="${user.username}">
                        </div>
                        <div class="flex-grow-1 min-width-0">
                            <h6 class="mb-0 text-truncate">${user.username}</h6>
                            ${badges.length ? `<div class="d-flex gap-1 mt-1 flex-wrap">${badges.join('')}</div>` : ''}
                        </div>
                        <button class="btn btn-sm btn-outline-primary flex-shrink-0" style="font-size:0.7rem;">
                            <i class="bi bi-chat-dots"></i>
                        </button>
                    </div>
                </div>
            `;
        }
        
        card.innerHTML = content;
        return card;
    }

    function renderMessages(messages, scrollToBottom = true) {
        const messagesHTML = messages.map(msgData => {
            const msgTime = formatTime(msgData.createdAt);
            const isUser = msgData.isMine;
            
            // Lógica de status de visualização para mensagens próprias:
            // ✔✔ = visualizada pelo destinatário (seen: true)
            // ✔ = apenas enviada (seen: false ou undefined)
            // sem símbolo = mensagens de outros usuários
            let checkSymbol = '';
            if (isUser) {
                if (msgData.seen) {
                    checkSymbol = '✔✔'; // Visualizada pelo destinatário
                } else {
                    checkSymbol = '✔'; // Apenas enviada
                }
            }
            
            return `
                <div class="msg-group ${isUser ? 'usuario' : 'outrousuario'}">
                    <div class="mensagem ${isUser ? 'usuario' : 'outrousuario'}">
                        ${msgData.text || msgData.mensagem}
                        <div class="msg-meta">
                            <span>${msgTime}</span>
                            ${checkSymbol ? `<span class="check">${checkSymbol}</span>` : ''}
                        </div>
                    </div>
                </div>
            `;
        }).join('');

        chatWindow.innerHTML = messagesHTML;
        
        if (scrollToBottom) {
            chatWindow.scrollTop = chatWindow.scrollHeight;
        }
    }

    // ---------------- Carregar DMs ----------------
    async function carregarDMs() {
        try {
            const res = await fetch('/api/conversas', { credentials: 'include' });
            if (!res.ok) throw new Error("Falha ao buscar conversas");
            const conversas = await res.json();

            const dmList = document.getElementById('dm-list');
            dmList.innerHTML = '';

            if (!conversas.length) {
                dmList.innerHTML = '<p class="text-muted small">Você ainda não tem conversas. Selecione um usuário abaixo para começar!</p>';
                return;
            }

            conversas.forEach(conversa => {
                criarDMCard(conversa);
            });

            // Solicita status atualizados após renderizar
            setTimeout(requestAllUserStatuses, 100);

        } catch (err) {
            console.error('[carregarDMs] Erro:', err);
            alert("Erro ao carregar conversas");
        }
    }

    // ---------------- Criar card de DM ----------------
    function criarDMCard(conversa) {
        const dmList = document.getElementById('dm-list');
        
        // Remove card existente se houver
        const existingCard = dmList.querySelector(`[data-chat-id="${conversa.id}"]`);
        if (existingCard) {
            existingCard.remove();
        }

        const card = createUserCard(conversa, 'conversation');
        if (selectedChatId === conversa.id) {
            card.classList.add('active');
        }
        card.setAttribute('data-chat-id', conversa.id);
        card.setAttribute('data-user-id', conversa.otherUser?.id);
        
        const cardTitle = conversa.otherUser?.username || 'Conversa';
        card.addEventListener('click', () => abrirDM(conversa.id, cardTitle, conversa.otherUser));
        dmList.prepend(card);
    }

    // ---------------- Buscar usuários ----------------
    async function buscarUsuarios() {
        const query = document.getElementById('search-input').value.trim();
        const resultsContainer = document.getElementById('search-results');
        
        if (!query) {
            resultsContainer.innerHTML = '';
            return;
        }

        resultsContainer.innerHTML = '<p class="text-muted small"><span class="spinner-border spinner-border-sm"></span> Buscando...</p>';

        try {
            const res = await fetch(`/api/conversas/search?q=${encodeURIComponent(query)}`, { credentials: 'include' });
            const data = await res.json();
            const users = data.users || [];

            if (!users.length) {
                resultsContainer.innerHTML = '<p class="text-muted small">Nenhum usuário encontrado</p>';
                return;
            }

            resultsContainer.innerHTML = '';
            users.forEach(user => {
                const card = createUserCard(user, 'search');
                card.setAttribute('data-user-id', user.id);
                
                card.querySelector('button').addEventListener('click', (e) => {
                    e.stopPropagation();
                    iniciarDM(user.username);
                });
                
                resultsContainer.appendChild(card);
            });
        } catch (err) {
            console.error('[buscarUsuarios] Erro:', err);
            resultsContainer.innerHTML = '<p class="text-danger small">Erro ao buscar usuários</p>';
        }
    }

    // ---------------- Iniciar DM ----------------
    async function iniciarDM(username) {
        try {
            const res = await fetch('/api/conversas', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                credentials: 'include',
                body: JSON.stringify({ username })
            });
            const data = await res.json();
            
            if (res.status === 201 || res.status === 409) {
                await carregarDMs();
                // Busca dados da conversa para passar o otherUser
                const conversasRes = await fetch('/api/conversas', { credentials: 'include' });
                const conversas = await conversasRes.json();
                const conversa = conversas.find(c => c.id === data.conversaId);
                if (conversa) {
                    abrirDM(data.conversaId, username, conversa.otherUser);
                } else {
                    abrirDM(data.conversaId, username);
                }
            } else {
                alert(data.message);
            }
        } catch (err) {
            console.error('[iniciarDM] Erro:', err);
            alert("Erro ao iniciar conversa");
        }
    }

    // ---------------- Abrir DM ----------------
    async function abrirDM(chatId, chatName, otherUserData = null) {
        console.log('[abrirDM] Abrindo chat:', chatId, chatName);
        
        // Armazena dados do outro usuário para o modal
        currentChatOtherUser = otherUserData;
        
        // Em mobile, esconde a lista e mostra o chat
        if (window.innerWidth < 768) {
            sidebarView.style.display = 'none';
            chatView.style.display = 'block';
        }
        
        // Atualiza interface
        const headerSpan = document.getElementById('dm-chat-header').querySelector('span');
        if (headerSpan) {
            headerSpan.textContent = chatName;
        }
        selectedChatId = chatId;
        chatInput.disabled = false;
        sendBtn.disabled = false;
        
        // Mostra botão de info do usuário
        chatUserInfoBtn.style.display = currentChatOtherUser ? 'block' : 'none';
        
        // Atualiza cards ativos
        document.querySelectorAll('.dm-card').forEach(card => {
            card.classList.remove('active');
        });
        document.querySelector(`[data-chat-id="${chatId}"]`)?.classList.add('active');
        
        // Zera badge de não lidas imediatamente no card
        const activeCard = document.querySelector(`[data-chat-id="${chatId}"]`);
        if (activeCard) {
            const badge = activeCard.querySelector('.unread-badge');
            if (badge) badge.remove();
        }
        
        // Limpa mensagens e carrega
        chatWindow.innerHTML = '<div class="text-center"><span class="spinner-border spinner-border-sm"></span> Carregando mensagens...</div>';
        allMessages = [];
        currentPage = 1;
        canLoadMoreMessages = true; // Reseta flag ao abrir nova conversa
        
        // Conecta ao chat via Socket.IO
        socket.emit('joinChat', chatId);
        
        // Carrega mensagens iniciais (true = carregamento inicial)
        await carregarMensagens(chatId, 1, true);
    }

    // ---------------- Carregar mensagens ----------------
    async function carregarMensagens(chatId, page = 1, isInitial = false) {
        if (loadingHistory) return;
        loadingHistory = true;

        try {
            const res = await fetch(`/api/conversas/${chatId}/messages?page=${page}`, { credentials: 'include' });
            if (!res.ok) throw new Error("Falha ao buscar mensagens");
            const data = await res.json();

            // Converte formato do backend para o frontend
            const msgs = data.messages.map(msg => ({
                id: msg.id,
                username: msg.username,
                mensagem: msg.mensagem,
                isMine: msg.isMine,
                createdAt: msg.createdAt,
                seen: msg.seen
            }));

            if (isInitial) {
                // Carregamento inicial: exibe as mensagens mais recentes
                allMessages = msgs;
                renderMessages(allMessages, true); // scroll para baixo
                
                // Marca mensagens como lidas via Socket.IO após carregar
                socket.emit('markAsRead', { chatId });
                
                // Atualiza a lista de DMs para refletir que as mensagens foram lidas
                setTimeout(() => carregarDMs(), 300);
            } else {
                // Carregando mensagens antigas (scroll para cima)
                const oldScrollHeight = chatWindow.scrollHeight;
                
                allMessages = [...msgs, ...allMessages];
                renderMessages(allMessages, false);
                
                // Mantém a posição de scroll
                chatWindow.scrollTop = chatWindow.scrollHeight - oldScrollHeight;
            }
            
        } catch (err) {
            console.error('[carregarMensagens] Erro:', err);
            chatWindow.innerHTML = '<div class="text-center text-danger">Erro ao carregar mensagens</div>';
        } finally {
            loadingHistory = false;
        }
    }

    // ---------------- Enviar mensagem ----------------
    function enviarMensagem() {
        const mensagem = chatInput.value.trim();
        console.log('[enviarMensagem] Enviando:', mensagem, 'para chat:', selectedChatId);
        
        if (!mensagem || !selectedChatId) {
            console.warn('[enviarMensagem] Mensagem vazia ou chat não selecionado');
            return;
        }

        socket.emit('sendMessage', {
            chatId: selectedChatId,
            mensagem
        });
        
        chatInput.value = '';
    }

    // ---------------- Event Listeners ----------------
    sendBtn.addEventListener('click', enviarMensagem);
    chatInput.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
            enviarMensagem();
        }
    });

    // Scroll infinito - carrega mensagens antigas ao scrollar para o topo
    let canLoadMoreMessages = true;
    chatWindow.addEventListener('scroll', () => {
        if (chatWindow.scrollTop === 0 && selectedChatId && !loadingHistory && canLoadMoreMessages) {
            const previousLength = allMessages.length;
            currentPage++;
            carregarMensagens(selectedChatId, currentPage, false).then(() => {
                // Se não carregou novas mensagens, desabilita carregamento
                if (allMessages.length === previousLength || allMessages.length < currentPage * 50) {
                    canLoadMoreMessages = false;
                }
            });
        }
    });

    // ---------------- Socket.IO Events ----------------
    socket.on('joinedChat', ({ chatId, success }) => {
        if (success) {
            console.log('[Socket] Entrou no chat:', chatId);
        }
    });

    socket.on('newMessage', (data) => {
        console.log('[Socket] Nova mensagem recebida:', data);
        
        const { chatId, message, lastMessage, lastMessageAt, unreadCount } = data;
        
        // Se é a conversa atual, adiciona a mensagem
        if (chatId === selectedChatId && message) {
            const newMsg = {
                id: message.id,
                text: message.text || message.mensagem,
                username: message.username,
                isMine: message.username === currentUser.username,
                createdAt: message.created_at || message.createdAt,
                seen: false
            };
            
            allMessages.push(newMsg);
            renderMessages(allMessages, true);
            
            // Marca como lida automaticamente quando recebe mensagem de outro usuário
            if (!newMsg.isMine) {
                socket.emit('markAsRead', { chatId: selectedChatId });
            }
        } else {
            // Se a mensagem é de outro chat, apenas atualiza o card
            carregarDMs();
        }
    });

    socket.on('messageRead', ({ chatId, userId, lastReadMessageId }) => {
        console.log('[Socket] Mensagens visualizadas:', chatId, userId, lastReadMessageId);
        
        // Se o userId é diferente do usuário atual, significa que outro usuário leu nossas mensagens
        if (userId !== currentUser.id) {
            // Atualiza status de visualização das mensagens próprias
            if (chatId === selectedChatId) {
                allMessages.forEach(msg => {
                    if (msg.isMine && msg.id <= lastReadMessageId) {
                        msg.seen = true;
                    }
                });
                
                // Re-renderiza para atualizar os checks
                const currentScroll = chatWindow.scrollTop;
                renderMessages(allMessages, false);
                chatWindow.scrollTop = currentScroll;
            }
        } else {
            // Se o userId é o próprio usuário, atualiza a lista de DMs
            // Isso acontece quando o usuário marca mensagens como lidas
            carregarDMs();
        }
    });

    socket.on('error', (error) => {
        console.error('[Socket] Erro:', error);
        alert('Erro: ' + error.message);
    });
    
    // ---------------- Status Online em Tempo Real ----------------
    // Função unificada para atualizar status de um ou múltiplos usuários
    function atualizarStatusUsuario(userId, status) {
        const dmCards = document.querySelectorAll('[data-chat-id]');
        dmCards.forEach(card => {
            const cardUserId = card.getAttribute('data-user-id');
            if (cardUserId && parseInt(cardUserId) === parseInt(userId)) {
                const statusIndicator = card.querySelector('.position-absolute.rounded-circle');
                if (statusIndicator) {
                    statusIndicator.style.background = getStatusColor(status);
                }
            }
        });
    }

    // Recebe mudança de status individual
    socket.on('userStatusChanged', ({ userId, status }) => {
        console.log('[Socket] Status do usuário', userId, 'mudou para:', status);
        atualizarStatusUsuario(userId, status);
    });

    // Recebe status em lote (resposta do requestUserStatus)
    socket.on('userStatusBatch', (statusMap) => {
        console.log('[Socket] Status em lote recebidos:', statusMap);
        Object.entries(statusMap).forEach(([userId, status]) => {
            atualizarStatusUsuario(parseInt(userId), status);
        });
    });

    // Solicita status atualizados de todos os usuários visíveis
    function requestAllUserStatuses() {
        const dmCards = document.querySelectorAll('[data-chat-id]');
        const userIds = [];
        
        dmCards.forEach(card => {
            const userId = card.getAttribute('data-user-id');
            if (userId && !userIds.includes(parseInt(userId))) {
                userIds.push(parseInt(userId));
            }
        });
        
        if (userIds.length > 0) {
            console.log('[Socket] Solicitando status atualizados para:', userIds);
            socket.emit('requestUserStatus', { userIds });
        }
    }

    // ---------------- Modal de Info do Usuário ----------------
    function showUserInfoModal(userData) {
        if (!userData) return;
        
        document.getElementById('modal-user-avatar').src = userData.profile_image || userData.avatar || '/images/default-avatar.png';
        document.getElementById('modal-user-name').textContent = userData.username;
        
        // Ações de amizade
        const actionsContainer = document.getElementById('modal-friend-actions');
        if (userData.isFriend) {
            actionsContainer.innerHTML = '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Amigos</span>';
        } else {
            actionsContainer.innerHTML = `
                <button class="btn btn-primary btn-sm" onclick="enviarPedidoAmizade('${userData.username}')">
                    <i class="bi bi-person-plus"></i> Enviar Pedido de Amizade
                </button>
            `;
        }
        
        userInfoModal.show();
    }

    // ---------------- Enviar Pedido de Amizade ----------------
    async function enviarPedidoAmizade(username) {
        try {
            const res = await fetch('/api/friends/request', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                credentials: 'include',
                body: JSON.stringify({ username })
            });

            if (!res.ok) {
                const error = await res.json();
                throw new Error(error.message || 'Erro ao enviar pedido');
            }

            alert('Pedido de amizade enviado com sucesso!');
            userInfoModal.hide();
            
            // Atualiza dados do usuário atual
            if (currentChatOtherUser && currentChatOtherUser.username === username) {
                currentChatOtherUser.friendRequestSent = true;
            }
        } catch (err) {
            console.error('[enviarPedidoAmizade] Erro:', err);
            alert('Erro ao enviar pedido: ' + err.message);
        }
    }

    // ---------------- Inicializar ----------------
    init();
</script>