<head>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/galeria.css">
</head>
<body>
    <main class="container container-glass p-4 my-4" id="conteudo-principal" data-gallery-id="<%= (typeof galleryId !== 'undefined') ? galleryId : '' %>">
        <div class="d-flex justify-content-between align-items-start pb-2">
            <div>
                <h2 id="gallery-title" class="fw-bold mb-1">Carregando...</h2>
                <p id="gallery-description" class="text-muted mb-1"></p>
                <small class="text-muted">Criado por <strong id="gallery-author">...</strong></small>
            </div>
            <div class="d-flex gap-2" id="gallery-actions">
                <button class="btn btn-primary shadow-sm" onclick="GaleriaManager.openUploadModal()">
                    <i class="bi bi-plus-lg"></i> <span class="d-none d-sm-inline">Adicionar Mídia</span>
                </button>
                
                <button id="btn-edit-mode" class="btn btn-outline-secondary ms-2" onclick="GaleriaManager.toggleEditMode()" title="Alternar Modo Edição">
                    <i class="bi bi-grid-3x3-gap-fill"></i> <span class="d-none d-sm-inline" id="btn-edit-text">Editar</span>
                </button>
                
                <button id="btn-save-layout" class="btn btn-success ms-2 d-none" onclick="GaleriaManager.saveLayout()" title="Salvar alterações de layout">
                    <i class="bi bi-save"></i> Salvar
                </button>
                
                <button class="btn btn-light border shadow-sm ms-2" onclick="GaleriaManager.openConfigModal()" title="Configurações da Galeria">
                    <i class="bi bi-gear-fill"></i>
                </button>
            </div>
        </div>
    </main>

    <div class="container mt-3 mb-5">
        <div id="image-list">
            <div class="col-12 text-center py-5 text-muted grid-full-width">
                <div class="spinner-border spinner-border-sm" role="status"></div> Carregando biblioteca...
            </div>
        </div>
    </div>
    
    <div class="modal fade" id="modalUpload" tabindex="-1" data-bs-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Adicionar Mídia</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formUpload">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Arquivo</label>
                            <input type="file" class="form-control" name="fileInput" accept="image/*,video/*,audio/*,.mkv,.avi,.webp" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Legenda (Opcional)</label>
                            <input type="text" class="form-control" name="title" placeholder="Ex: Bora soltar a criatividade!">
                        </div>
                        <div class="mb-3 p-3 bg-light rounded border" id="upload-progress-wrapper" style="display:none;">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="fw-bold text-primary">Enviando...</span>
                                <span id="upload-percent-text">0%</span>
                            </div>
                            <div class="progress mb-2" style="height: 10px;">
                                <div id="upload-progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" style="width: 0%"></div>
                            </div>
                            <div class="text-end text-muted small">
                                <span id="upload-size-text">0.0 MB / 0.0 MB</span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100" id="btn-submit-upload">
                            <i class="bi bi-cloud-upload"></i> Enviar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal fade" id="modalConfig" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Configurações</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formConfig">
                         <input type="hidden" name="remove_cover" id="flag-remove-cover" value="false">
                        <input type="hidden" name="remove_background" id="flag-remove-bg" value="false">

                        <div class="row g-4">
                            <div class="col-md-6 border-end">
                                <h6 class="text-primary mb-3">Informações</h6>
                                <div class="mb-3"><label class="form-label">Nome</label><input type="text" class="form-control" name="name" id="config-name" required></div>
                                <div class="mb-3"><label class="form-label">Descrição</label><textarea class="form-control" name="description" id="config-description" rows="3"></textarea></div>
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" name="ispublic" id="config-is-public">
                                    <label class="form-check-label fw-bold ms-2" for="config-is-public">Público</label>
                                </div>
                                <div id="collaborators-section">
                                    <label class="form-label fw-bold">Colaboradores</label>
                                    <div class="input-group mb-2">
                                        <input type="text" id="search-user-input" class="form-control" placeholder="Nome de usuário...">
                                        <button class="btn btn-outline-primary" type="button" onclick="GaleriaManager.searchUsers()"><i class="bi bi-search"></i></button>
                                    </div>
                                    <div id="search-results" class="list-group mb-2 shadow-sm" style="max-height: 150px; overflow-y: auto;"></div>
                                    <div id="collaborators-list" class="d-flex flex-wrap gap-2 mt-2"></div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h6 class="text-primary mb-3">Visual</h6>
                                <div class="mb-3">
                                   <label class="form-label small text-muted text-uppercase fw-bold">Capa</label>
                                    <div class="input-group">
                                        <input type="file" class="form-control preview-trigger" name="cover" id="input-cover" accept="image/*">
                                        <button type="button" class="btn btn-outline-danger" onclick="GaleriaManager.toggleRemove('cover')"><i class="bi bi-trash"></i></button>
                                    </div>
                                    <small id="status-cover" class="text-danger d-none mt-1">Será removido ao salvar</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label small text-muted text-uppercase fw-bold">Fundo (Background)</label>
                                    <div class="input-group">
                                        <input type="file" class="form-control preview-trigger" name="background" id="input-bg" accept="image/*">
                                        <button type="button" class="btn btn-outline-danger" onclick="GaleriaManager.toggleRemove('background')"><i class="bi bi-trash"></i></button>
                                    </div>
                                    <small id="status-bg" class="text-danger d-none mt-1">Será removido ao salvar</small>
                                </div>
                                <div class="row g-2 mb-3">
                                    <div class="col-4"><label class="form-label small">Fundo</label><input type="color" class="form-control form-control-color w-100 preview-trigger" name="backgroundcolor" id="config-bg-color"></div>
                                    <div class="col-4"><label class="form-label small">Texto</label><input type="color" class="form-control form-control-color w-100 preview-trigger" name="fontcolor" id="config-font-color"></div>
                                    <div class="col-4"><label class="form-label small">Cartões</label><input type="color" class="form-control form-control-color w-100 preview-trigger" name="cardcolor" id="config-card-color"></div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label small">Colunas</label>
                                    <select class="form-select preview-trigger" name="gridxsize" id="config-grid-columns">
                                        <option value="8">8</option>
                                        <option value="10">10</option>
                                        <option value="12" selected>12 (Padrão)</option>
                                        <option value="14">14</option>
                                        <option value="16">16</option>
                                    </select>
                                </div>
                                <div class="mb-3" id="group-bg-fill">
                                    <label class="form-label small">Preenchimento do Fundo</label>
                                    <select class="form-select preview-trigger" name="backgroundfill" id="config-bg-fill">
                                        <option value="cover">Cobrir (Fill)</option><option value="repeat">Repetir (Pattern)</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label small">Fonte Google (Nome)</label>
                                    <div class="input-group">
                                        <input list="fonts-list" type="text" class="form-control preview-trigger" name="fontfamily" id="config-font-family" placeholder="Ex: Montserrat, Roboto:700">
                                        <button class="btn btn-outline-secondary" type="button" id="btn-show-fonts" title="Ver fontes" onclick="GaleriaManager.showFontOptions()"><i class="bi bi-chevron-down"></i></button>
                                    </div>
                                    <datalist id="fonts-list">
                                        <option value="Inter">
                                        <option value="Roboto">
                                        <option value="Montserrat">
                                        <option value="Poppins">
                                        <option value="Lato">
                                        <option value="Open Sans">
                                        <option value="Nunito">
                                        <option value="Merriweather">
                                        <option value="Playfair Display">
                                    </datalist>
                                    <small class="form-text text-muted">Digite o nome de uma Google Font (ex: 'Roboto' ou 'Montserrat:700').</small>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer px-0 pb-0 mt-3 border-top-0">
                            <button type="button" class="btn btn-outline-danger me-auto" onclick="GaleriaManager.deleteGallery()"><i class="bi bi-trash"></i> Excluir Galeria</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-success px-4">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalMedia" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content bg-transparent border-0 shadow-none">
                <div class="modal-body p-0 text-center position-relative">
                    <div id="media-container" class="d-flex justify-content-center align-items-center" style="min-height: 200px;"></div>
                </div>
                <div class="mt-3 text-center">
                    <h5 id="media-caption" class="text-white text-shadow d-inline-block bg-dark bg-opacity-75 px-3 py-1 rounded"></h5>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalEditItem" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Item</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formEditItem">
                        <input type="hidden" name="item_id" id="edit-item-id">
                        <div class="mb-3">
                            <label class="form-label">Nome / Legenda</label>
                            <input type="text" class="form-control" name="title" id="edit-item-name">
                        </div>
                        <div class="mb-3 form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="edit-item-showtitle" name="showtitle">
                            <label class="form-check-label" for="edit-item-showtitle">Mostrar título</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ajuste de Imagem</label>
                            <select class="form-select" name="objectfit" id="edit-item-fit">
                                <option value="cover">Cobrir (Fill)</option>
                                <option value="contain">Conter (Fit)</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Z-index (Ordem de sobreposição)</label>
                            <div class="input-group">
                                <button type="button" class="btn btn-outline-secondary" onclick="GaleriaManager.changeModalZ(-1)"><i class="bi bi-dash-lg"></i></button>
                                <input type="number" class="form-control text-center" name="positionz" id="edit-item-zindex" value="0" min="0">
                                <button type="button" class="btn btn-outline-secondary" onclick="GaleriaManager.changeModalZ(1)"><i class="bi bi-plus-lg"></i></button>
                            </div>
                            <div class="form-text small text-muted">Ajuste a ordem visual na grade.</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Capa (Imagem/GIF) - Opcional</label>
                            <input type="file" class="form-control" name="cover" accept="image/*,image/gif">
                            <div class="form-text small">Envie uma capa para ser usada como prévia (para vídeo/áudio).</div>
                        </div>
                        <div class="mb-3" id="edit-item-current-cover" style="display:none;"></div>
                        <div class="modal-footer px-0 pb-0 mt-3 border-top-0">
                            <button type="button" class="btn btn-danger me-auto" onclick="event.stopPropagation(); GaleriaManager.deleteItem(document.getElementById('edit-item-id').value)"><i class="bi bi-trash"></i> Excluir Item</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-success">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/galeria.js"></script>
</body>