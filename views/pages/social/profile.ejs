<div class="profile-container">
    <div class="profile-header">
        <div class="banner-wrap w-100 position-relative" id="profile-banner">
            <div class="profile-card position-absolute start-0 top-50 translate-middle-y ms-4 d-flex align-items-start">
                <div id="profile-main-avatar-container" class="profile-avatar-container me-3">
                    <img class="profile-avatar" src="">
                    <span class="status-dot" id="user-status-dot" title="Offline"></span>
                </div>
                <div class="profile-meta">
                    <h1 class="profile-name mb-0">...</h1>
                    <span class="profile-pronouns"></span>
                </div>
            </div>
            <div class="profile-actions">
                <button id="btn-edit" class="btn btn-light btn-sm rounded-pill fw-bold px-4 d-none" onclick="window.location.href='/editar'">Editar Perfil</button>
                <button id="btn-follow" class="btn btn-primary btn-sm rounded-pill fw-bold px-4 d-none">Seguir</button>
            </div>
        </div>
    </div>


    <div class="profile-body">
        <div class="profile-sidebar">
            <div class="bio-container">
                <div class="section-title">Biografia</div>
                <div id="bio-text">Carregando...</div>
            </div>
            <div class="galleries-container">
                <div class="section-title">Galerias</div>
                <div id="galerias-list">Carregando...</div>
            </div>
            <div class="friends-container">
                <div class="section-title">Amigos</div>
                <div id="amigos-list">Carregando...</div>
            </div>
        </div>
        <div class="profile-main">
            <!-- Tabs de Feed -->
            <div class="d-flex border-bottom mb-3 rounded-top">
                <button class="btn flex-grow-1 py-1 fw-bold feed-tab active" id="tab-posts" onclick="switchTab('posts')">Posts</button>
                <button class="btn flex-grow-1 py-1 fw-bold feed-tab d-none" id="tab-bookmarks" onclick="switchTab('bookmarks')">Favoritos</button>
            </div>

            <!-- Área de Novo Post (Apenas se for o próprio perfil) -->
            <div class="card mb-3 border-0 shadow-sm d-none post-composer-card" id="profile-new-post-area">
                <div class="card-body">
                    <div class="d-flex gap-3">
                        <% const u = locals.loggedUser; %>
                        <img src="<%= u ? u.profileimage : '' %>" class="rounded post-composer-avatar">
                        <div class="flex-grow-1">
                            <textarea id="feed-novo-post-textarea" class="form-control border-0 shadow-none post-composer-textarea" placeholder="O que está pensando?" rows="2"></textarea>
                            <div id="feed-novo-post-preview" class="post-preview-container mt-2"></div>
                            <div class="d-flex justify-content-between align-items-center border-top">
                                <div class="d-flex gap-2">
                                    <label for="feed-novo-post-media" class="btn btn-outline-primary btn-sm rounded-pill border-0">
                                        <i class="bi bi-image"></i>
                                    </label>
                                    <input type="file" id="feed-novo-post-media" hidden multiple accept="image/*,video/*">
                                </div>
                                <div class="d-flex gap-2 align-items-center">
                                    <span id="feed-novo-post-char-counter" class="text-muted small me-3">0/400</span>
                                    <button id="btn-feed-postar" class="btn btn-primary rounded-pill px-4 fw-bold">Postar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div id="feed-container" class="rounded shadow-sm">
                <div class="text-center text-muted py-5">
                    <div class="spinner-border spinner-border-sm mb-2"></div>
                    <p>Carregando posts...</p>
                </div>
            </div>
        </div>
    </div>
</div>

