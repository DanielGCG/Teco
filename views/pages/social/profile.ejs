<script src="/js/post.js"></script>
<script>
    const pathParts = window.location.pathname.split('/');
    const username = pathParts[1];
    window.username = username;
    let profileUserId = null;
    window.selectedFiles = [];
    window.currentTab = 'posts';
    let socket = null;

    async function switchTab(tab) {
        window.currentTab = tab;
        document.querySelectorAll('.profile-tab').forEach(t => t.classList.remove('active'));
        document.getElementById(`tab-${tab}`).classList.add('active');
        
        const feed = document.getElementById('posts-feed');
        feed.innerHTML = `
            <div class="text-center text-muted py-5">
                <div class="spinner-border spinner-border-sm mb-2"></div>
                <p>Carregando ${tab === 'posts' ? 'posts' : 'favoritos'}...</p>
            </div>
        `;
        
        carregarPosts(username);
    }

    // Inicializar Socket e Listeners
    function initSocket() {
        if (socket) return;
        
        socket = SocketConnector.init();
        
        // Entrar na sala do perfil
        socket.emit('joinProfile', username);

        // Ouvir mudanças de status
        socket.on('userStatusChanged', ({ userId, status }) => {
            if (userId === profileUserId) {
                const dot = document.getElementById('user-status-dot');
                if (dot) {
                    dot.className = `status-dot ${status}`;
                    dot.title = status.charAt(0).toUpperCase() + status.slice(1);
                }
            }
        });

        // Ouvir carregamento de posts
        socket.on('postsLoaded', ({ posts, tab }) => {
            if (tab !== window.currentTab) return;
            
            const feed = document.getElementById('posts-feed');
            if (posts.length === 0) {
                feed.innerHTML = `<div class="card-body text-center py-5 text-muted">Nenhum ${tab === 'posts' ? 'post' : 'favorito'} ainda.</div>`;
                return;
            }

            feed.innerHTML = posts.map(post => PostUI.renderPost(post, window.currentUser)).join('');
        });

        // Ouvir novos posts em tempo real
        socket.on('newPost', (post) => {
            // Só adiciona se estivermos na aba de posts e o post for do dono do perfil
            if (window.currentTab === 'posts' && post.author.username === username) {
                const feed = document.getElementById('posts-feed');
                
                // Verifica se o post já existe no feed para evitar duplicatas
                if (document.getElementById(`post-${post.id}`)) return;

                // Se houver uma mensagem de "Nenhum post" ou o spinner de carregamento, limpa o feed
                const emptyState = feed.querySelector('.text-muted');
                if (emptyState && !feed.querySelector('.post-card')) {
                    feed.innerHTML = '';
                }

                // Adiciona o novo post no topo com uma pequena animação de fade se desejar
                const postHtml = PostUI.renderPost(post, window.currentUser);
                feed.insertAdjacentHTML('afterbegin', postHtml);
            }
        });

        // Ouvir atualizações de posts (curtidas, etc)
        socket.on('postUpdate', (data) => {
            // Pode haver múltiplos elementos para o mesmo post (feed e modal)
            const postElements = document.querySelectorAll(`[id="post-${data.id}"]`);
            postElements.forEach(postEl => {
                if (data.likes_count !== undefined) {
                    const likeCountEl = postEl.querySelector('.post-action.like span');
                    if (likeCountEl) likeCountEl.textContent = data.likes_count;
                }
                if (data.replies_count !== undefined) {
                    const replyCountEl = postEl.querySelector('.post-action.reply span');
                    if (replyCountEl) replyCountEl.textContent = data.replies_count;
                }
                if (data.reposts_count !== undefined) {
                    const repostCountEl = postEl.querySelector('.post-action.repost span');
                    if (repostCountEl) repostCountEl.textContent = data.reposts_count;
                }
            });
        });


        // Ouvir deleções de posts
        socket.on('postDeleted', (postId) => {
            const postEl = document.getElementById(`post-${postId}`);
            if (postEl) {
                postEl.style.opacity = '0';
                postEl.style.transition = 'opacity 0.3s ease';
                setTimeout(() => postEl.remove(), 300);
            }
        });
    }

    async function carregarPerfil() {
        try {
            // 1. Carregar dados básicos do usuário
            const response = await fetch(`/api/users/${username}`, {
                method: "GET",
                credentials: "include"
            });

            if (!response.ok) {
                return;
            }

            const user = await response.json();
            profileUserId = user.id;

            // Inicializa socket após ter o ID do usuário
            initSocket();

            // Atualizar UI básica
            document.querySelector(".profile-name").textContent = user.username;
            document.querySelector(".profile-avatar").src = user.profile_image;
            document.querySelector(".profile-pronouns").textContent = user.pronouns || '';
            document.getElementById("bio-text").innerHTML = user.bio ? user.bio.replace(/\n/g, '<br>') : 'Nenhuma biografia disponível.';
            
            if (user.background_image) {
                document.getElementById("profile-banner").style.backgroundImage = `url('${user.background_image}')`;
            }

            // 2. Verificar se é o próprio perfil ou outro usuário
            if (window.currentUser) {
                // Atualizar avatares nos modais com a imagem do usuário logado
                const avatarSrc = window.currentUser.profile_image;
                
                if (window.currentUser.id === user.id) {
                    document.getElementById("btn-edit").classList.remove("d-none");
                    document.getElementById("btn-new-post").classList.remove("d-none");
                    document.getElementById("tab-bookmarks").classList.remove("d-none");
                } else {
                    document.getElementById("btn-follow").classList.remove("d-none");
                    verificarSeguimento(user.id);
                }
            }

            // 3. Carregar Galerias
            carregarGalerias(user.id);

            // 4. Carregar Amigos
            carregarAmigos(user.id);

            // 5. Carregar Posts
            carregarPosts(username);
            
        } catch (error) {
            console.error("Erro ao carregar perfil:", error);
        }
    }

    function abrirModalNovoPost() {
        PostUI.abrirModalNovoPost();
    }

    async function enviarNovoPost() {
        const textarea = document.getElementById('novo-post-textarea');
        const btn = document.getElementById('btn-confirmar-novo-post');
        const content = textarea.value.trim();
        PostActions.enviarPost(content, window.selectedFiles, { type: 'post' }, btn, 'modalNovoPost');
    }

    async function carregarPosts(targetUsername) {
        if (socket) {
            socket.emit('loadPosts', { username: targetUsername, tab: window.currentTab });
        }
    }

    window.carregarPosts = carregarPosts;

    async function verificarSeguimento(targetId) {
        const btn = document.getElementById("btn-follow");
        if (!btn) return;

        try {
            const status = await FollowAPI.verificarStatus(targetId);
            const config = status.isMutual 
                ? { text: 'Amigos', class: 'btn-outline-primary', action: FollowAPI.deixarDeSeguir }
                : status.following 
                    ? { text: 'Seguindo', class: 'btn-secondary', action: FollowAPI.deixarDeSeguir }
                    : status.followedBy 
                        ? { text: 'Seguir de volta', class: 'btn-success', action: FollowAPI.seguir }
                        : { text: 'Seguir', class: 'btn-primary', action: FollowAPI.seguir };

            btn.innerHTML = config.text;
            btn.className = `btn btn-sm ${config.class}`;
            btn.disabled = false;
            btn.onclick = async () => {
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
                await config.action(targetId, { showAlert: false });
                await verificarSeguimento(targetId);
                if (window.carregarAmigos) carregarAmigos(targetId);
            };
        } catch (e) {
            btn.disabled = false;
            btn.textContent = 'Erro';
        }
    }

    async function carregarGalerias(userId) {
        try {
            const response = await fetch(`/api/galeria/user/${userId}`);
            const data = await response.json();
            const list = document.getElementById("galerias-list");
            
            if (data.success && data.galleries.length > 0) {
                list.innerHTML = `<div class="galerias-grid">
                    ${data.galleries.map(g => `
                        <a href="/galeria/${g.id}" class="gallery-square" title="${g.name}">
                            <img src="${g.cover_url}">
                            <div class="gallery-overlay"><span>${g.name}</span></div>
                        </a>
                    `).join('')}
                </div>`;
            } else {
                list.innerHTML = '<div class="text-muted small">Nenhuma galeria pública.</div>';
            }
        } catch (e) {
            document.getElementById("galerias-list").innerHTML = 'Erro ao carregar.';
        }
    }

    async function carregarAmigos(userId) {
        try {
            const friends = await FollowAPI.carregarAmigos(userId);
            const list = document.getElementById("amigos-list");
            
            if (friends && friends.length > 0) {
                list.innerHTML = friends.map(f => `
                    <a href="/${f.username}" class="friend-item">
                        <img src="${f.profile_image}" class="friend-avatar">
                        <span class="small">${f.username}</span>
                    </a>
                `).join('');
            } else {
                list.innerHTML = '<div class="text-muted small">Nenhum amigo ainda.</div>';
            }
        } catch (e) {
            document.getElementById("amigos-list").innerHTML = 'Erro ao carregar.';
        }
    }

    carregarPerfil();
</script>

