<script>
    const pathParts = window.location.pathname.split('/');
    const username = pathParts[1];
    window.username = username;
    window.profileUserId = null;
    window.selectedFiles = [];
    window.currentTab = 'posts';
    let socket = null;

    async function switchTab(tab) {
        window.currentTab = tab;
        document.querySelectorAll('.feed-tab').forEach(t => t.classList.remove('active'));
        document.getElementById(`tab-${tab}`).classList.add('active');
        
        const feedType = tab === 'posts' ? 'user' : 'bookmarks';
        PostFeed.switchFeed(feedType, username);
    }

    // Inicializar Socket e Listeners
    function initSocket() {
        if (socket) return;
        
        socket = SocketConnector.init();
        
        // Entrar na sala do perfil
        socket.emit('joinProfile', username);

        // Ouvir novos posts em tempo real
        socket.on('newPost', (post) => {
            // Só adiciona se estivermos na aba de posts e o post for do dono do perfil e não for um comentário
            if (window.currentTab === 'posts' && post.author.username === username && post.type !== 'comment') {
                const feed = document.getElementById('feed-container');
                
                // Verifica se o post já existe no feed para evitar duplicatas
                if (document.getElementById(`post-${post.publicid}`)) return;

                // Se houver uma mensagem de "Nenhum post" ou o spinner de carregamento, limpa o feed
                const emptyState = feed.querySelector('.text-muted');
                if (emptyState && !feed.querySelector('.post-card')) {
                    feed.innerHTML = '';
                }

                // Adiciona o novo post no topo
                const postHtml = PostUI.renderPost(post, window.currentUser);
                feed.insertAdjacentHTML('afterbegin', postHtml);
            }
        });

        // Ouvir atualizações de posts (curtidas, etc)
        socket.on('postUpdate', (data) => {
            PostUI.updatePostStats(data.publicid, data);
        });

        // Ouvir deleções de posts
        socket.on('postDeleted', (postId) => {
            const postEl = document.getElementById(`post-${postId}`);
            if (postEl) {
                postEl.style.opacity = '0';
                postEl.style.transition = 'opacity 0.3s ease';
                setTimeout(() => postEl.remove(), 300);
            }
        });
    }

    async function carregarPerfil() {
        try {
            const response = await fetch(`/api/users/${username}`, {
                method: "GET",
                credentials: "include"
            });

            if (!response.ok) return;

            const user = await response.json();
            window.profileUserId = user.publicid;

            // Vincular ID para atualizações automáticas de status via UIUtils
            const avatarContainer = document.getElementById('profile-main-avatar-container');
            if (avatarContainer) avatarContainer.setAttribute('data-user-id', user.publicid);

            initSocket();

            document.querySelector(".profile-name").textContent = user.username;
            document.querySelector(".profile-avatar").src = user.profileimage;
            document.querySelector(".profile-pronouns").textContent = user.pronouns || '';
            document.getElementById("bio-text").innerHTML = user.bio ? user.bio.replace(/\n/g, '<br>') : 'Nenhuma biografia disponível.';
            
            if (user.backgroundimage) {
                document.getElementById("profile-banner").style.backgroundImage = `url('${user.backgroundimage}')`;
            }

            if (window.currentUser) {
                if (window.currentUser.publicid === user.publicid) {
                    document.getElementById("btn-edit").classList.remove("d-none");
                    document.getElementById("profile-new-post-area").classList.remove("d-none");
                    document.getElementById("tab-bookmarks").classList.remove("d-none");
                } else {
                    document.getElementById("btn-follow").classList.remove("d-none");
                    verificarSeguimento(user.publicid);
                }
            }

            carregarGalerias(user.publicid);
            await carregarAmigos(user.publicid);

            // Sincroniza status dos usuários carregados (amigos, dono do perfil, etc)
            UIUtils.requestPageStatuses();

            // Inicializa o feed usando PostFeed
            PostFeed.init('feed-container', 'user', username);
            
        } catch (error) {
            console.error("Erro ao carregar perfil:", error);
        }
    }

    // Configura o mini-form de post no perfil
    document.addEventListener('DOMContentLoaded', () => {
        PostUI.setupNewPostForm({
            textareaId: 'feed-novo-post-textarea',
            mediaInputId: 'feed-novo-post-media',
            btnId: 'btn-feed-postar',
            previewId: 'feed-novo-post-preview',
            extraData: { type: 'post' }
        });
    });

    async function carregarPosts(targetUsername) {
        // Agora gerenciado pelo PostFeed
    }

    window.carregarPosts = carregarPosts;

    async function verificarSeguimento(targetId) {
        const btn = document.getElementById("btn-follow");
        if (!btn) return;

        try {
            const status = await FollowAPI.verificarStatus(targetId);
            const config = status.isMutual 
                ? { text: 'Amigos', class: 'btn-outline-primary', action: FollowAPI.deixarDeSeguir, confirmMsg: 'Deseja desfazer a amizade com este usuário?' }
                : status.following 
                    ? { text: 'Seguindo', class: 'btn-secondary', action: FollowAPI.deixarDeSeguir, confirmMsg: 'Deseja parar de seguir este usuário?' }
                    : status.followedBy 
                        ? { text: 'Seguir de volta', class: 'btn-success', action: FollowAPI.seguir }
                        : { text: 'Seguir', class: 'btn-primary', action: FollowAPI.seguir };

            btn.innerHTML = config.text;
            btn.className = `btn btn-sm ${config.class}`;
            btn.disabled = false;
            btn.onclick = async () => {
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
                await config.action(targetId, { showAlert: false, confirmMessage: config.confirmMsg });
                await verificarSeguimento(targetId);
                if (window.carregarAmigos) carregarAmigos(profileUserId);
            };
        } catch (e) {
            btn.disabled = false;
            btn.textContent = 'Erro';
        }
    }

    async function carregarGalerias(userId) {
        try {
            const response = await fetch(`/api/galeria/user/${userId}`);
            const data = await response.json();
            const list = document.getElementById("galerias-list");
            
            if (data.success && data.galleries.length > 0) {
                list.innerHTML = `<div class="galleries-grid">
                    ${data.galleries.map(g => `
                        <a href="/galeria/${g.publicid}" class="gallery-square" title="${g.name}">
                            <img src="${g.coverurl}">
                            <div class="gallery-overlay"><span>${g.name}</span></div>
                        </a>
                    `).join('')}
                </div>`;
            } else {
                list.innerHTML = '<div class="text-muted small">Nenhuma galeria pública.</div>';
            }
        } catch (e) {
            document.getElementById("galerias-list").innerHTML = 'Erro ao carregar.';
        }
    }

    async function carregarAmigos(userId) {
        try {
            const friends = await FollowAPI.carregarAmigos(userId);
            const list = document.getElementById("amigos-list");
            
            if (friends && friends.length > 0) {
                list.innerHTML = friends.map(f => `
                    <a href="/${f.username}" class="friend-item" data-user-id="${f.publicid}">
                        <div class="position-relative">
                            <img src="${f.profileimage}" class="friend-avatar rounded">
                            <span class="status-dot ${f.status || 'offline'} status-dot-sm"></span>
                        </div>
                        <span class="small">${f.username}</span>
                    </a>
                `).join('');
            } else {
                list.innerHTML = '<div class="text-muted small">Nenhum amigo ainda.</div>';
            }
        } catch (e) {
            document.getElementById("amigos-list").innerHTML = 'Erro ao carregar.';
        }
    }

    carregarPerfil();
</script>

