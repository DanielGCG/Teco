                    <h4 class="mb-0 profile-tab d-none" id="tab-bookmarks" onclick="switchTab('bookmarks')">Favoritos</h4>
                </div>
                <button id="btn-new-post" class="btn btn-primary btn-sm d-none" onclick="abrirModalNovoPost()">
                    <i class="bi bi-plus-lg me-1"></i> Novo Post
                </button>
            </div>
            
            <div id="posts-feed">
                <div class="text-center text-muted py-5">
                    <div class="spinner-border spinner-border-sm mb-2"></div>
                    <p>Carregando posts...</p>
                </div>
            </div>
        </div>
    </div>
</div>

